{
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser", 
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
